! Color variables
#define fg_color #C5C8C6
#define bg_color #1D1F21
#define hl_fg_color #FFFFFF
#define hl_bg_color #584181
#define dim_fg_color #707880
#define u_color #A54242

! Panel colors

panel.color.default_fg: fg_color
panel.color.default_bg: bg_color
panel.color.monitor_fg: fg_color
panel.color.monitor_bg: bg_color
panel.color.focused_monitor_fg: hl_fg_color
panel.color.focused_monitor_bg: hl_bg_color
