! Color variables

!! Default theme
#define fg_color #C5C8C6
#define bg_color #1D1F21
!! Light theme
!#define fg_color #1D1F21
!#define bg_color #E8E8E8
!! Further variables
#define hl_fg_color #FFFFFF
#define hl_bg_color #85678F
#define dim_fg_color #707880
#define u_color #A54242

! Panel colors
panel.color.default_fg: fg_color
panel.color.default_bg: bg_color
panel.color.monitor_fg: fg_color
panel.color.monitor_bg: bg_color
panel.color.focused_monitor_fg: hl_fg_color
panel.color.focused_monitor_bg: hl_bg_color
panel.color.free_fg: dim_fg_color
panel.color.free_bg: bg_color
panel.color.focused_free_fg: hl_fg_color
panel.color.focused_free_bg: hl_bg_color
panel.color.occupied_fg: fg_color
panel.color.occupied_bg: bg_color
panel.color.focused_occupied_fg: hl_fg_color
panel.color.focused_occupied_bg: hl_bg_color
panel.color.urgent_fg: fg_color
panel.color.urgent_bg: u_color
panel.color.focused_urgent_fg: fg_color
panel.color.focused_urgent_bg: u_color
panel.color.state_fg: fg_color
panel.color.state_bg: bg_color
panel.color.title_fg: fg_color
panel.color.title_bg: bg_color
panel.color.sys_fg: hl_fg_color
panel.color.sys_bg: hl_bg_color
panel.color.space: #00000000

! Cursor theme
Xcursor.theme: oxy-grey
Xcursor.size: 24

! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! vim: ft=xdefaults
*background: bg_color
*foreground: fg_color
! black
*color0: #282A2E
*color8: #373B41
! red
*color1: #A54242
*color9: #CC6666
! green
*color2: #8C9440
*color10: #B5BD68
! yellow
*color3: #DE935F
*color11: #F0C674
! blue
*color4: #5F819D
*color12: #81A2BE
! magenta
*color5: #85678F
*color13: #B294BB
! cyan
*color6: #5E8D87
*color14: #8ABEB7
! white
*color7: #707880
*color15: #C5C8C6

! URxvt config

