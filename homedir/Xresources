										xft:DejaVu Sans:bold:pixelsize=16
URxvt*italicFont:                     xft:DejaVu Sans Mono for Powerline:italic:pixelsize=16, \
										xft:DejaVu Sans:italic:pixelsize=16
URxvt*boldItalicFont:                 xft:DejaVu Sans Mono for Powerline:bold:italic:pixelsize=16, \
  										xft:DejaVu Sans:bold:italic:pixelsize=16
URxvt*internalBorder:                 10
URxvt*modifier:                       mod3
URxvt*iso14755:                       false
