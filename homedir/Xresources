panel.color.free_bg: bg_color
panel.color.focused_free_fg: hl_fg_color
panel.color.focused_free_bg: hl_bg_color
panel.color.occupied_fg: fg_color
panel.color.occupied_bg: bg_color
panel.color.focused_occupied_fg: hl_fg_color
panel.color.focused_occupied_bg: hl_bg_color
panel.color.urgent_fg: fg_color
panel.color.urgent_bg: u_color
panel.color.focused_urgent_fg: fg-color
panel.color.focused_urgent_bg: u_color
panel.color.state_fg: fg_color
panel.color.state_bg: bg_color
panel.color.title_fg: fg_color
panel.color.title_bg: bg_color
panel.color.sys_fg: hl_fg_color
panel.color.sys_bg: hl_bg_color
panel.color.space: #00000000

! Cursor theme
Xcursor.theme: oxy-grey

! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! vim: ft=xdefaults

*background: bg_color
*foreground: fg_color
