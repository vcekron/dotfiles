#
# wm independent hotkeys
#

# terminal emulator
super + {_,shift + }Return
	{urxvt,~/dotfiles/sysscripts/newterm.sh}

super + {_,shift + }KP_Enter
	{urxvt,~/dotfiles/sysscripts/newterm.sh}

# program launcher
super + r
    rofi -monitor -1 -theme "Tomorrow-Dusk" -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#
#
# quit/restart bspwm
super + mod3 + q
	[[ $(xdo id -a "$PANEL_WM_NAME") ]] && pkill -fo "bspwm/panel"; \
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node focused -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}.local

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}.local

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.leaf.!hidden

# focus the next/previous desktop in the current monitor
super + {bracketleft,backslash}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	{~/dotfiles/sysscripts/bspwmcont.sh focus-desktop,bspc node -d} "$MONITOR1:^{1-9,10}"

super + {_,shift + }{F1,F2,F3,F4,F5,F6,F7,F8,F9,F10}
	{~/dotfiles/sysscripts/bspwmcont.sh focus-desktop,bspc node -d} "$MONITOR2:^{1-9,10}"

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + mod3 + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + mod3 + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + mod3 + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + mod3 + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# personal hotkeys
super + BackSpace
	~/dotfiles/sysscripts/scratchtoggle.sh

super + {_,shift + ,mod3 + }s
	~/dotfiles/sysscripts/bspwmcont.sh {focus-next-monitor,node-to-next-monitor,fetch-active-node}

super + {_,shift + ,mod3 + }d
	~/dotfiles/sysscripts/bspwmcont.sh {bubble-desktop-next,bubble-desktop-prev,bubble-desktop-monitor}

super + {_,shift + }v
	bspc node @/ {-F vertical,-R 90}

super + {semicolon,apostrophe}
	bspc node -R {270,90}

super + {_,shift + }u
	bspc node -f next{.floating,.tiled}.local

ctrl + mod3 + l
	~/dotfiles/sysscripts/lock.sh

ctrl + mod3 + r
	~/dotfiles/sysscripts/redtoggle.sh

ctrl + mod3 + a
	~/dotfiles/sysscripts/togglesink.sh

ctrl + mod3 + b
	~/dotfiles/sysscripts/fetchheadsetbattery.sh; \
	~/dotfiles/sysscripts/fetchmousebattery.sh

ctrl + mod3 + p
	playerctl play-pause

ctrl + mod3 + {_,shift +}n
	playerctl {next,previous}

super + e
	urxvt -e $SHELL -c "stty -ixon;ranger"

Print
	maim -u -m 1 -s ~/scrShot.png

XF86Sleep
	~/dotfiles/sysscripts/lock.sh s

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle; \
	~/.config/bspwm/panel_resources/volume > "$PANEL_FIFO"

XF86AudioRaiseVolume
	sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ +1%"; \
	~/.config/bspwm/panel_resources/volume > "$PANEL_FIFO"

XF86AudioLowerVolume
	sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ -1%"; \
	~/.config/bspwm/panel_resources/volume > "$PANEL_FIFO"

XF86AudioPlay
	playerctl play-pause

XF86AudioStop
	playerctl stop

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

XF86WebCam
	~/dotfiles/sysscripts/lock.sh s

ctrl + mod3 + Menu
	~/dotfiles/sysscripts/lock.sh s

XF86MonBrightnessUp
	light -A 10

XF86MonBrightnessDown
	light -U 10

super + shift + r
	~/play/play.sh
